datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Agent {
  id          String   @id
  name        String
  description String?
  config      Json     @default("{}")
  logs        ChatLog[]
}

model ChatLog {
  id       Int      @id @default(autoincrement())
  agentId  String
  role     String
  message  String
  ts       DateTime @default(now())

  agent    Agent    @relation(fields: [agentId], references: [id])
}
